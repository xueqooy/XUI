source 'ssh://git@cocoapods.sdp.nd:/cocoapods-precompiled/specs.git'
source 'ssh://git@cocoapods.sdp.nd:/cocoapods/specs.git'

platform :ios, '12.0'

target 'llp_ui_iOS-Demo' do
    root_path = File.join(__dir__, '../')
    podspec_path = File.join(root_path, 'llp_ui_iOS.podspec')
    pod 'llp_ui_iOS', :path => podspec_path.to_s
    pod 'Masonry'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
    end
  end
end
